<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- Define reference name -->
<mapper namespace="TeamInfo">

<!-- Define how to store the query results -->
  <resultMap type="ralph.zhang.mrnba.bean.TeamInfo" id="Information">
    <id column="id" jdbcType="INTEGER" property="id"/>
    <result column="name" jdbcType="VARCHAR" property="name"/>
    <result column="information" jdbcType="VARCHAR" property="information"/>
  </resultMap>
  
<!-- Define SQL command -->  
  <insert id="addOne" parameterType="ralph.zhang.mrnba.bean.TeamInfo">
    INSERT INTO TeamInfo
		SET name=#{name}, information=#{information}
  </insert>
  
  <delete id="deleteOne" parameterType="int">
  	DELETE FROM TeamInfo WHERE id = #{_parameter}
  </delete>
  
  <select id="queryTeamInfoList" parameterType="ralph.zhang.mrnba.bean.TeamInfo" resultMap="Information">
    SELECT id,name,information FROM teaminfo WHERE 1=1
    <!-- If statement to joint SQL command-->
    <if test="name != null and !&quot;&quot;.equals(name.trim())">
    	AND name LIKE '%' #{name} '%'
    </if>
  </select>
  
  
</mapper>